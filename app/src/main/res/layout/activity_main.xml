<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.egco428.a23283.assignment2_map.LoginActivity">


    <TextView
        android:text="List of Usernames"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#43c5f0"
        android:id="@+id/textView2"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/lablelogin"
        android:layout_below="@+id/circleImageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listview"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width = "100dp"
        android:layout_height = "100dp"
        android:src = "@drawable/egco_logo"
        android:layout_marginTop="15dp"
        android:id="@+id/circleImageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
