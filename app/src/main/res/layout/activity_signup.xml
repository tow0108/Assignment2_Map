<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.egco428.a23283.assignment2_map.LoginActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_marginTop="10dp"
        android:src="@drawable/egco_logo"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <Button
            android:text="Randon by Checking"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/btnRandom"
            android:textSize="12dp"
            android:layout_weight="1"
            android:background="@drawable/button"/>

        <Button
            android:text="Add New User"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/btnAdd"
            android:textSize="12dp"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:background="@drawable/button"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginLayout"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Username"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:textColor="#43c5f0"
            android:id="@+id/textView2"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/lablelogin"/>

        <EditText
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/signUser"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/password" />

        <TextView
            android:text="Password"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:textColor="#43c5f0"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textView3"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/lablelogin"/>

        <EditText
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/signPass"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/password" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent">

            <TextView
                android:text="Latitude"

                android:gravity="center"
                android:textColor="#43c5f0"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:id="@+id/textView5"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/lablelogin"/>

            <TextView
                android:text="Longtitude"

                android:gravity="center"
                android:textColor="#43c5f0"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:id="@+id/textView6"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/lablelogin"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent">

            <EditText
                android:gravity="center"
                android:textColor="#43c5f0"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:id="@+id/editLa"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/password"
                android:inputType="numberSigned" />

            <EditText
                android:gravity="center"
                android:textColor="#43c5f0"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:id="@+id/editLong"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/password"
                android:inputType="numberSigned" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
